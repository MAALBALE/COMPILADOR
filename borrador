        Container contenedor = getContentPane();
        contenedor.add(panelDerecha, BorderLayout.EAST);

        // Configurar la ventana
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(800, 600);
        setLocationRelativeTo(null);
        setVisible(true);
    }

